<div data-controller="formtoggle class="position-relative" >

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="container-fluid">
      <div class="d-flex">
        <%= link_to "#", class: "navbar-brand" do %>
          <%= image_tag "logo.png" %>
        <% end %>
        <% if user_signed_in? %>
          <div data-action="click->formtoggle#fire">
            <p class="mt-3 toggleform"><%= current_user.address %> <i class="fa-solid fa-chevron-down"></i></p>
          </div>
        <% end %>
      </div>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <%= link_to "Accueil", games_path, class: "navbar-brand" %>
            <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= render "shared/profilpick" %>
            </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Mes locations", dashboard_index_path, class: "dropdown-item" %>
                <%= link_to "Mon profil", edit_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Autres actions à définir", "#", class: "dropdown-item" %>
                <%= link_to "Me déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
            <div data-formtoggle-target="togglableElement" class=" py-5 ps-3 bg-white shadow-sm d-none position-absolute w-100 z-3">
              <h3>Choisir ma nouvelle localisation</h3>
              <%= simple_form_for(current_user, as: :user, method: :patch, url: registration_path(current_user)) do |f| %>
                <%= f.input :address %>
                <%= f.submit 'Changer ma localisation' %>
              <% end %>
            </div>
          <% else %>
              <%= link_to "Home", root_path, class: "navbar-brand" %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>


</div>

