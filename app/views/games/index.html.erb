
<h1 class="m-4">La liste des jeux disponibles à <%= current_user.address %></h1>

<%= render "shared/searchbar" %>

<div class="cards">

  <% @games.each do |game| %>

      <div class="gamecard">
    <%= link_to game_path(game) do %>
        <%= image_tag "logo.png", class: "img-card"%>
        <div class= "mt-3">
          <h4><%= game.name %></h4>
          <p>Prix : <%= game.price %> €</p>
          <p>Disponible : <%= game.availability %></p>
          <p><i class="fa-solid fa-users"></i> <%= game.player_number %></p>
          <p><i class="fa-solid fa-clock"></i> <%= game.games_duration%></p>
        </div>
    <% end %>
      </div>

  <% end %>

</div>
