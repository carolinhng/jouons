


<div class="content">

  <div>
    <div>
      <h2 class="m-4"><Label></Label>Liste des jeux à <%= current_user.address %></h2>
      <p class="m-4"><%= @games.count %> résultats</p>
    </div>
  <div class="cards">
    <% @games.each do |game| %>

      <div class="gamecard">
        <%= link_to game_path(game) do %>
        <%= cl_image_tag game.photos.first.key, class: "img-card", crop: :fill %>
            <div class="contentcard">
              <div>
                <h4><%= game.name %></h4>
              <p><i class="fa-solid fa-users"></i> <%= game.player_number %></p>
              <p><i class="fa-solid fa-clock"></i> <%= game.games_duration%></p>
              </div>
                <p><strong> Prix :</strong> <%= game.price %> € / jour</p>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>

  </div>

  <div style="width: 50%; height: 100vh; position: sticky; top: 0;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


</div>
